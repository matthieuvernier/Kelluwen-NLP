<?xml version="1.0" encoding="UTF-8"?>
<typeSystemDescription xmlns="http://uima.apache.org/resourceSpecifier">
    <name>TypeSystem-Kelluwen-NLP</name>
    <description>UIMA Annotations type system for the Kelluwen-NLP project</description>
    <version>1.0</version>
    <vendor>Universidad Austral de Chile - Kelluwen</vendor>
  <types>
    <typeDescription>
      <name>cl.uach.kelluwen.nlp.types.Token</name>
      <description>Annotation covering simples tokens (simples words)</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
    <features>
        <featureDescription>
          <name>lemma</name>
          <description>token's lemma</description>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>pos</name>
          <description>normalized grammatical category</description>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>posTreeTagger</name>
          <description>grammatical category according to the external tool : TreeTagger (not normalized !)</description>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
      <featureDescription>
          <name>textTokenFrequency</name>
          <description>give the frequency of this token in the current text</description>
          <rangeTypeName>uima.cas.Float</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>languageTokenFrequency</name>
          <description>gives the frequency of this token in the language</description>
          <rangeTypeName>uima.cas.Float</rangeTypeName>
        </featureDescription>
      <featureDescription>
          <name>puntajeRelevancia</name>
          <description>TF * ITF score</description>
          <rangeTypeName>uima.cas.Float</rangeTypeName>
        </featureDescription>
      <featureDescription>
          <name>textTokenRank</name>
          <description>Rank of this token in the text according to it frequency</description>
          <rangeTypeName>uima.cas.Integer</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>languageTokenRank</name>
          <description>Rank of this token according to it frequency in the language</description>
          <rangeTypeName>uima.cas.Integer</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>stopWord</name>
          <description/>
          <rangeTypeName>uima.cas.Boolean</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
  <typeDescription>
      <name>cl.uach.kelluwen.nlp.types.location.City</name>
      <description>Cities in the world</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <features>
        <featureDescription>
          <name>latitude</name>
          <description>North-South</description>
          <rangeTypeName>uima.cas.Double</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>longitude</name>
          <description>West-East</description>
          <rangeTypeName>uima.cas.Double</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>country</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>normalizedName</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
  </types>
</typeSystemDescription>
